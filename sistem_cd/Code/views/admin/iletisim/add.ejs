<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      İletisim Tipi Ekle

    </h1>

  </section>

  <!-- Main content -->
  <section class="content">
    <div class="box box" style="width: 50%;">
      <div class="box-body">

        <% if (req.session.flash.message) {%>
        <div class="box-body">
          <div class="alert alert-<%- req.flash('type') %> alert-dismissable">
            <i class="fa fa-<%- req.flash('icon') %>"></i>
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            <b><%- req.flash('message') %></b>
          </div>
        </div>
        <%}%>

        <form role="form" onsubmit="return form_validate();" action="/admin/iletisim/save" method="post">
        <!-- text input -->
        <div class="form-group">
          <label>Kullanıcı Id</label>
          <select class="form-control" name="kullaniciId" id="category">
              <option value="0">Seçiniz</option>
              <% _.each(kullanicilar, function(kullanici) {%>
              <option value="<%=kullanici.id%>"><%=kullanici.isim%>-<%=kullanici.soyIsim%></option>
              <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label>İletişim Tip Id</label>
          <select class="form-control" name="iletisimTipId" id="category">
              <option value="0">Seçiniz</option>
              <% _.each(iletisimtipleri, function(tip) {%>
              <option value="<%=tip.id%>"><%=tip.deger%></option>
              <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label>İletisim Değer</label>
          <input type="text" name="deger" id="deger" class="form-control">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-sm">Ekle</button>
        </div>

        </form>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>


<script type="text/javascript">
  function form_validate(){
    var name=$("#name").val().length;
    if(name<3){
      alert("Isim en az 3 karakter olmalı");
      return false;
    }
  }

</script>
