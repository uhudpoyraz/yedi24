<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Kullanıcılar
    </h1>
  </section>

  <!-- Main content -->
  <section class="content">

    <div class="box">

      <div class="box-body">
      <% if (req.session.flash.message) {%>
        <div class="box-body">
          <div class="alert alert-<%- req.flash('type') %> alert-dismissable">
            <i class="fa fa-<%- req.flash('icon') %>"></i>
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            <b><%- req.flash('message') %></b>
          </div>
        </div>
        <%}%>
        <table class="table table-bordered">
          <tbody>
          <tr>
            <th style="width: 10px">id</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Email</th>
            <th>Şifre</th>
            <th>Durum</th>
            <th>GörevId</th>
            <th style="width: 40px">Düzenle</th>
            <th style="width: 40px">Karaliste</th>
            <th style="width: 40px">Sil</th>
          </tr>
          <% _.each(kullanicilar, function(kullanici) {%>
          <tr>
            <td><%=kullanici.id %></td>
            <td><%=kullanici.isim%></td>
            <td><%=kullanici.soyIsim%></td>
            <td><%=kullanici.email%></td>
            <td><%=kullanici.sifre%></td>
            <td><%=kullanici.hesapDurum%></td>
            <td><%=kullanici.gorevId%></td>
            <td><a href="/admin/kullanici/edit/<%=kullanici.id %>"><span class="badge bg-green">düzenle</span></a></td>
            <td><a href="/admin/kullanici/ban/<%=kullanici.email %>"><span class="badge bg-black">karaliste</span></a></td>
            <td><a onclick="return confirm('Silmek İstediğinizden Eminmisiniz ?');" href="/admin/kullanici/delete/<%=kullanici.id %>"><span class="badge bg-red">sil</span></a></td>
          </tr>
          <% }) %>

          </tbody></table>
      </div><!-- /.box-body -->
      <div class="box-footer clearfix ">
        <div class="pagination-sm no-margin pull-right">

        </div>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>
