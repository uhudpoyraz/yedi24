<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Karaliste Kayıt Ekle

    </h1>

  </section>

  <!-- Main content -->
  <section class="content">
    <div class="box box" style="width: 50%;">
      <div class="box-body">
        <form role="form" onsubmit="return check();" action="http://localhost:1337/admin/karaliste/save" method="post">
        <!-- text input -->
        <div class="form-group">
          <label>Email</label>
          <input type="email" name="email"  id="email" required="required" class="form-control" required placeholder="Geçerli bir email adresi giriniz.">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-sm" >Ekle</button>
        </div>

        </form>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>


<script type="text/javascript">
  function check(input) {  
    if(input.validity.typeMismatch){  
        input.setCustomValidity('Bu email adresi "' + input.value + '" geçerli değildir. Geçerli bir email adresi giriniz.');  
    }  
    else {  
        input.setCustomValidity("");  
    }                 
  }  
</script>
