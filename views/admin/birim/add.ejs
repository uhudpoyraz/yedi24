<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Bina Ekle

    </h1>

  </section>

  <!-- Main content -->
  <section class="content">
    <div class="box box" style="width: 50%;">
      <div class="box-body">
        <form role="form"  action="admin/birim/save" method="post">

          <div class="form-group">
            <label>Blok Seçiniz</label>
            <select class="form-control" name="blokid" id="binaId">
              <option value="0">Seçiniz</option>

              <% _.each(bloklar, function(blok) {%>
              <option value="<%=blok.id%>"><%=blok.isim%></option>
              <% }) %>

            </select>
          </div>

        <!-- text input -->
        <div class="form-group">
          <label>Birim İsmi</label>
          <input type="text" name="name" id="name" class="form-control">
        </div>
          <div class="form-group">
            <label>Birim Kodu</label>
            <input type="text" name="code" id="code" class="form-control">
          </div>
        <div class="form-group">
          <button class="btn btn-primary btn-sm">Ekle</button>
        </div>

        </form>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>


<script type="text/javascript">
  function form_validate(){
    var name=$("#name").val().length;
    if(name<3){
      alert("Isim en az 3 karakter olmalı");
      return false;
    }
  }

</script>
