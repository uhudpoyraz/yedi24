<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Birim Duzenle

    </h1>

  </section>

  <!-- Main content -->
  <section class="content">
    <div class="box box" style="width: 50%;">
      <div class="box-body">
        <form role="form"  action="admin/birim/update" method="post">
          <input type="hidden" name="id" value="<%=birim.id%>">

          <div class="form-group">
            <label>Bina Seçiniz</label>
            <select class="form-control" name="blokid" id="blokId">
              <option value="0">Seçiniz</option>

              <% _.each(bloklar, function(blok) {%>
              <option <% if (blok.id==birim.blokId) {%> selected="selected" <% } %> value="<%=blok.id%>"><%=blok.isim%></option>
              <% }) %>

            </select>
          </div>

          <!-- text input -->
          <div class="form-group">
            <label>Blok İsmi</label>
            <input type="text" name="name" id="name"  value="<%=birim.isim%>" class="form-control">
          </div>
          <div class="form-group">
            <label>Blok Kodu</label>
            <input type="text" name="code" id="code" value="<%=birim.kod%>" class="form-control">
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-sm">guncelle</button>
          </div>

        </form>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>


<script type="text/javascript">
  function form_validate(){
    var name=$("#name").val().length;
    if(name<3){
      alert("Isim en az 3 karakter olmalı");
      return false;
    }
  }

</script>
