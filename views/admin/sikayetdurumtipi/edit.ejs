<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Şikayet Durum Tipi Düzenle

    </h1>

  </section>

  <!-- Main content -->
  <section class="content">
    <div class="box box" style="width: 50%;">
      <div class="box-body">
        <form role="form"  action="admin/sikayetdurumtipi/update" method="post">
          <!-- text input -->
          <input type="hidden" name="id" value="<%=sikayetdurumtipi.id%>" >
          <div class="form-group">
            <label>Şikayet Durum Tipi</label>
            <input type="text" name="name" id="name"  value="<%=sikayetdurumtipi.isim%>" class="form-control">
          </div>
          <label for="name">Tipin Durumu</label>
          <div class="checkbox">
            <label>
          <input type="radio" <% if (sikayetdurumtipi.surec==0) {%>  checked <%}%> name="surec" value="0" class="form-control"> Durağan

          </label>
      </div>

      <div class="checkbox">
        <label>


          <input type="radio" <% if (sikayetdurumtipi.surec==1) {%> checked <% }%> name="surec" value="1"  class="form-control"> Sürdürülebilir
        </label>
      </div>

      </div>
          <div class="form-group">
            <button class="btn btn-primary btn-sm">Guncelle</button>
          </div>

        </form>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>


<script type="text/javascript">
  function form_validate(){
    var name=$("#name").val().length;
    if(name<3){
      alert("Isim en az 3 karakter olmalı");
      return false;
    }
  }

</script>
