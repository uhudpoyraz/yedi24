<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Yetki Tipi Düzenle

    </h1>

  </section>

  <!-- Main content -->
  <section class="content">
    <div class="box box" style="width: 50%;">
      <div class="box-body">
        <form role="form" action="/admin/yetkitipi/update" method="post">
          <!-- text input -->
          <input type="hidden" name="id" value="<%=yetkitipi.id%>">
          <div class="form-group">
            <div class="form-group">
              <label>Gorev İsmi</label>
              <input type="text" name="gorev" id="gorev" value="<%=yetkitipi.gorev%>" class="form-control">
            </div>
            <div class="form-group">
              <label>Yetki Derecesi</label>
              <input type="text" name="yetkiderecesi" id="yetkiderecesi" value="<%=yetkitipi.yetkiDerecesi%>"  class="form-control">
            </div>
          <div class="form-group">
            <button class="btn btn-primary btn-sm">Düzenle</button>
          </div>

        </form>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>


<script type="text/javascript">
  function form_validate(){
    var name=$("#name").val().length;
    if(name<3){
      alert("Isim en az 3 karakter olmalı");
      return false;
    }
  }

</script>
