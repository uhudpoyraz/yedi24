<aside class="right-side">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Bina Ekle

    </h1>

  </section>

  <!-- Main content -->
  <section class="content">
    <div class="box box" style="width: 50%;">
      <div class="box-body">
        <form role="form"  action="admin/blok/update" method="post">
          <input type="hidden" name="id" value="<%=blok.id%>">
            <div class="form-group">
            <label>Kullanici Seçiniz</label>
            <select class="form-control" name="kullaniciid" id="category">
              <option value="0">Seçiniz</option>

              <% _.each(kullanicilar, function(kullanici) {%>
              <option <% if (kullanici.id==blok.kullaniciId) {%> selected="selected" <% } %>  value="<%=kullanici.id%>"><%=kullanici.isim%>-<%=kullanici.soyIsim%></option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label>Bina Seçiniz</label>
            <select class="form-control" name="binaid" id="binaId">
              <option value="0">Seçiniz</option>

              <% _.each(binalar, function(bina) {%>
              <option <% if (bina.id==blok.binaId) {%> selected="selected" <% } %> value="<%=bina.id%>"><%=bina.isim%></option>
              <% }) %>

            </select>
          </div>

          <!-- text input -->
          <div class="form-group">
            <label>Blok İsmi</label>
            <input type="text" name="name" id="name"  value="<%=blok.isim%>" class="form-control">
          </div>
          <div class="form-group">
            <label>Blok Kodu</label>
            <input type="text" name="code" id="code" value="<%=blok.kod%>" class="form-control">
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-sm">guncelle</button>
          </div>

        </form>
      </div>
    </div>
  </section>
  <!-- /.content -->
</aside>


<script type="text/javascript">
  function form_validate(){
    var name=$("#name").val().length;
    if(name<3){
      alert("Isim en az 3 karakter olmalı");
      return false;
    }
  }

</script>
